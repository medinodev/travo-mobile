<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ui.perfil.EditarPerfilActivity">

    <!-- Conteúdo rolável -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Foto do usuário -->
            <ImageView
                android:id="@+id/imgFotoUsuarioEditar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_bg"
                android:contentDescription="Foto do usuário" />

            <Button
                android:id="@+id/btnAlterarFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alterar foto"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/orange"
                android:textColor="@android:color/white" />

            <!-- Campos Nome / Bio / Telefone -->
            <EditText
                android:id="@+id/editNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome"
                android:layout_marginTop="16dp"
                android:background="@android:drawable/edit_text"
                android:padding="10dp" />

            <EditText
                android:id="@+id/editBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bio"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/edit_text"
                android:padding="10dp" />

            <EditText
                android:id="@+id/editTelefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefone"
                android:inputType="phone"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/edit_text"
                android:padding="10dp" />

            <Button
                android:id="@+id/btnSalvarPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salvar"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/orange"
                android:textColor="@android:color/white" />

            <!-- Separador -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alterar senha"
                android:textStyle="bold"
                android:textColor="@color/colorSecondary"
                android:layout_marginTop="24dp"
                android:textSize="16sp" />

            <!-- Campos de Senha -->
            <EditText
                android:id="@+id/editSenhaAntiga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Senha antiga"
                android:inputType="textPassword"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/edit_text"
                android:padding="10dp" />

            <EditText
                android:id="@+id/editSenhaNova"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nova senha"
                android:inputType="textPassword"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/edit_text"
                android:padding="10dp" />

            <EditText
                android:id="@+id/editSenhaConfirmar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirme nova senha"
                android:inputType="textPassword"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/edit_text"
                android:padding="10dp" />

            <Button
                android:id="@+id/btnSalvarSenha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salvar"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/orange"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation Fixo -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>
