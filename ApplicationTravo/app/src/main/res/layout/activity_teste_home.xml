<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".ui.TesteHomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:spacing="12dp">

        <Button
            android:id="@+id/btnCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CadastroActivity" />

        <Button
            android:id="@+id/btnDetalhesLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DetalhesLocal" />

        <Button
            android:id="@+id/btnFavoritos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favoritos" />

        <Button
            android:id="@+id/btnListaCupons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ListaCupons" />

        <Button
            android:id="@+id/btnListaServicos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ListaServicos" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LoginActivity" />

        <Button
            android:id="@+id/btnEditarPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EditarPerfilActivity" />

        <Button
            android:id="@+id/btnPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PerfilActivity" />

        <Button
            android:id="@+id/btnPerfilEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PerfilEditarActivity" />

        <Button
            android:id="@+id/btnRecuperarSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RecuperarSenhaActivity" />

        <Button
            android:id="@+id/btnConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configuracoes" />

    </LinearLayout>
</ScrollView>
