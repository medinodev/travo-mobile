<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/bg_card_cupom"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/txtDesconto"
        android:text="Desconto de 20%"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000" android:layout_height="20dip" android:layout_width="300dip"/>

    <TextView
        android:id="@+id/txtLoja"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:text="Restaurante Central"
        android:textColor="#444"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtValidade"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:text="Válido até 25/12/2025"
        android:textColor="#666"
        android:textSize="12sp" />
</LinearLayout>
