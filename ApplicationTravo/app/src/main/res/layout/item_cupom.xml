<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/bg_card_cupom"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDesconto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desconto de 20%"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/txtLoja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurante Central"
            android:textColor="#444"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtValidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Válido até 25/12/2025"
            android:textColor="#666"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/txtCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#006400"
            android:textSize="12sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usar cupom"
            android:textSize="12sp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="#FFD700"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_favorite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/btn_star_big_off"
        android:contentDescription="Favoritar" />
</LinearLayout>
